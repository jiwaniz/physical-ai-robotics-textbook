# Google AI Configuration (for embeddings)
GOOGLE_API_KEY=your-google-ai-api-key-here

# Database Configuration
NEON_DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/dbname
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/dbname

# Qdrant Vector Database
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION=book_content

# Better-Auth Configuration
BETTER_AUTH_SECRET=your-256-bit-secret-key-here
BETTER_AUTH_URL=http://localhost:8000
BETTER_AUTH_TRUST_HOST=true

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,https://your-github-pages-url.github.io

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_BURST=20

# Performance & Caching
ENABLE_RESPONSE_CACHE=true
CACHE_TTL_SECONDS=3600
MAX_CACHE_SIZE_MB=100

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=lax
SESSION_MAX_AGE_DAYS=7

# Deployment (Render)
RENDER_EXTERNAL_URL=https://your-app.onrender.com
